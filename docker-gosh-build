#!/bin/sh

set -x


rm -rf tmp
mkdir tmp
cd tmp
echo "docker_file: repo/Dockerfile" > config.yaml
GOSH_REPO="${@: -1}"
set -- "${@:1:$(($#-1))}"
echo "cloning GOSH repo: $GOSH_REPO"

INI_LOCATION=dispatcher.ini 
# export PATH=$PATH:~/.gosh
git clone $GOSH_REPO repo


gosh-builder-cli --config ../config.yaml

docker $*
